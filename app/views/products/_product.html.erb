<li>
<p>Name: <%= product.name %></p>
<p>Price: <%= product.price %>$</p>
<% if Customer.find_by(email: current_user.email) %>
    <% if Buy.find_by(customer_id: current_user.id,product_id: product.id)%>
      <p style="color:green">Bought</p>
    <% else %>
      <p><%= button_to "Buy",buys_path(customer: current_user.id,product: product.id) %></p>
    <% end %>
<% end %>
</li>

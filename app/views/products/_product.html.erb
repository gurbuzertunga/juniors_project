<div class="flex p-2">
  <% if product.image.attached? %>
    <%= image_tag product.image, class:"w-24 h-24 rounded-full object-cover object-center" %>
  <% else %>
    <%= image_tag "default_product", class:"w-24 h-24 rounded-full object-cover object-center" %>
  <% end %>

  <div class="my-auto mx-2">
    <p>Name: <%= product.name %></p>
    <p>Price: <%= product.price %>$</p>

    <% if Employee.find_by(email: current_user.email) %>
      <%= link_to "Edit" ,edit_product_path(product) %>
    <% end %>
    <% if Customer.find_by(email: current_user.email) %>
      <% unless Buy.find_by(product_id: product.id)%>
        <p><%= button_to "Buy",buys_path(customer: current_user.id,product: product.id) %></p>
      <% end %>
    <% end %>
  </div>

  <% if product.review != nil %>
    <div class="my-auto mx-5 p-2 border rounded">
      Review: <br>
      <%= product.review.text %>
      <%= button_to "delete", review_path(product.review), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  <% else %>
    <% if product.status == "delivered" %>
      <%= link_to "Review", new_review_path(product: product.id), class:"my-auto" %>
    <% end %>
  <% end %>
</div>

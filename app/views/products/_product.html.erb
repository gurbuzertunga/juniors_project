<li>
<div class="flex">
    <% if product.image.attached? %>
        <%= image_tag product.image, style:"width: 50px;"%>
    <% else %>
        <%= image_tag "default_profile", style:"width: 50px;"%>
    <% end %>
</div>
<p>Name: <%= product.name %></p>
<p>Price: <%= product.price %>$</p>
<% if Employee.find_by(email: current_user.email) %>
  <%= link_to "Edit" ,edit_product_path(product) %>
<% end %>
<% if Customer.find_by(email: current_user.email) %>
    <% unless Buy.find_by(product_id: product.id)%>
      <p><%= button_to "Buy",buys_path(customer: current_user.id,product: product.id) %></p>
    <% end %>
<% end %>
</li>

<div class="p-4 sm:w-1/2 lg:w-1/3 w-full ">
<div class=" flex items-center  justify-between p-4  rounded-lg bg-white shadow-indigo-50 shadow-md">
  <div>
    <h2 class="text-gray-900 text-lg font-bold"><%= product.name %></h2>
    <h3 class="mt-2 text-xl font-bold text-green-500 text-left"<%= product.price %>$</h3>
    <% if Employee.find_by(email: current_user.email) %>
    <%=link_to "Edit",edit_product_path(product), class:"text-sm mt-6 px-4 py-2 bg-[#304FFE]  text-white rounded-lg font-laonoto tracking-wider hover:bg-indigo-500 outline-none"%>
    <%end %>
    <% if Customer.find_by(email: current_user.email) %>
      <% unless Buy.find_by(product_id: product.id)%>
        <p><%= button_to "Buy",buys_path(customer: current_user.id,product: product.id), class:"text-sm mt-6 px-4 py-2 bg-[#304FFE]  text-white rounded-lg font-laonoto tracking-wider hover:bg-indigo-500 outline-none" %></p>
      <% end %>
    <% end %>
  </div>
  <div
    class="bg-gradient-to-tr from-blue-600 to-indigo-600 w-32 h-32  rounded-full shadow-2xl shadow-[#304FFE] border-white  border-dashed border-2  flex justify-center items-center ">
    <div>
    <% if product.image.attached? %>
    <%= image_tag product.image, class:"w-24 h-24 rounded-full object-cover object-center" %>
  <% else %>
    <%= image_tag "default_product", class:"w-24 h-24 rounded-full object-cover object-center" %>
  <% end %>
    </div>
  </div>
</div>

</div>
<h1>Update Product</h1>


<%= form_with(model: @product ,data: {turbo: false}) do |f| %>
    <div style="color:red"> <%= render "shared/error_messages" , object: f.object %></div>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br><br>
    
      <%= f.label :price %><br>
      <%= f.number_field :price , step: 0.5 %><br><br>
    
      <%= f.label :image %><br>
      <%= f.file_field :image %><br><br>
    
      <%= f.submit "Update product" %>
    <% end %>
<h1>Edit Profile</h1>
<%=  form_with(model: @customer,data:{turbo:false}) do |f| %>
    <%= render "shared/error_messages" , object: f.object %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    
    <%= f.label :email %><br>
    <%= f.text_field :email %><br><br>
  
    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>
    
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br><br>
  
    <%= f.label :date_of_birth %><br>
    <%= f.date_field :date_of_birth %><br><br>

    <%= f.label :image %><br>
    <%= f.file_field :image %><br><br>

    <%= f.submit "Update" %>
    
  <% end %>
<%= link_to "Back to customer", customer_path(@customer) %>